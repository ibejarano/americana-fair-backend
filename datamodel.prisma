enum Permission {
  ADMIN
  USER
  PERMISSIONUPDATE
  ITEMUPDATE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  permissions: [Permission!] @scalarList(strategy: RELATION)
}

type Item {
  id: ID! @id
  title: String!
  price: Int!
  image: String!
  largeImage: String!
  description: String!
}